<!-- Adding new book with form -->
 <h2>Add a book</h2>
 <form class="form" action="/books" method="post">
    <label>Title <input name="title" required></label>
    <label>Author <input name="author"></label>
    <label>ISBN <input name="isbn" placeholder="e.g. 9780131103627"></label>
    <label>Rating (1-10) <input name="rating" type="number" min="1" max="10"></label>
    <label>Finished on <input name="finished_on" type="date"/></label>
    <label>Review <textarea name="review" rows="3"></textarea></label>
    <label>Notes <textarea name="notes" rows="6"></textarea></label>
    <div class="row">
        <button type="submit">Save</button>
        <a class="btn" href="/">Cancel</a>
    </div>
 </form>
 <section class="muted">
    <p>Tip: Try the API search: <code>/api/search?q=deep work</code></p>
 </section>